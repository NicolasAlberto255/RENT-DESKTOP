<Window x:Class="RENT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RENT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFFCFCFC" Height="450" Width="800">
        <Button x:Name="rgUsuarioBtn" Content="Registrar Usuario" HorizontalAlignment="Left" Margin="187,189,0,0" VerticalAlignment="Top" Click="rgUsuarioBtn_Click" ClickMode="Press"/>
        <Button x:Name="bUsuariosBtn" Content="Buscar Usuarios" HorizontalAlignment="Left" Margin="187,214,0,0" VerticalAlignment="Top" Click="bUsuariosBtn_Click" ClickMode="Press"/>
        <Button x:Name="addReservaBtn" Content="Añadir Reserva" HorizontalAlignment="Left" Margin="187,239,0,0" VerticalAlignment="Top" Click="addReservaBtn_Click" ClickMode="Press"/>
        <Button x:Name="addDepartamentoBtn" Content="Añadir Departamento" HorizontalAlignment="Left" Margin="187,264,0,0" VerticalAlignment="Top" Click="addDepartamentoBtn_Click"/>
    </Grid>
</Window>
