<Page x:Class="RENT.Windows.AddUsuarios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RENT.Windows"
      mc:Ignorable="d" 
      Title="AddUsuarios">

    <Grid Background="#FFFCFCFC" Height="450" Width="800">
        <TextBox x:Name="nombreTxt" HorizontalAlignment="Left" Margin="108,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Height="26" Grid.Column="1"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="36,74,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="56"/>
        <TextBox x:Name="apellidoTxt" HorizontalAlignment="Left" Margin="108,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Height="26" Grid.Column="1"/>
        <Label Content="Apellido:" HorizontalAlignment="Left" Margin="36,105,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="56"/>
        <TextBox x:Name="cedulaTxt" HorizontalAlignment="Left" Margin="108,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Height="26" Grid.Column="1"/>
        <Label Content="Cedula:" HorizontalAlignment="Left" Margin="36,136,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="49"/>
        <TextBox x:Name="correoTxt" HorizontalAlignment="Left" Margin="108,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Height="26" Grid.Column="1"/>
        <Label Content="Correo:" HorizontalAlignment="Left" Margin="36,167,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="49"/>
        <TextBox x:Name="telefonoTxt" HorizontalAlignment="Left" Margin="108,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Height="26" Grid.Column="1"/>
        <Label Content="Telefono:" HorizontalAlignment="Left" Margin="36,199,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="58"/>
        <TextBox x:Name="rolTxt" HorizontalAlignment="Left" Margin="10,414,0,0" Text="3"  TextWrapping="Wrap" Visibility="Hidden" VerticalAlignment="Top" Width="24" Height="26" Grid.Column="1"/>
        <TextBox x:Name="idTxt" Visibility="Hidden" HorizontalAlignment="Left" Margin="108,43,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="35" Height="26" Grid.Column="1"/>
        <Label x:Name="lblMessage" Content="" HorizontalAlignment="Left" Margin="36,319,0,0" VerticalAlignment="Top" Width="210" Height="26"/>
        <ComboBox x:Name="regionesCmb"  HorizontalAlignment="Left" Margin="108,230,0,0" VerticalAlignment="Top" Width="138" Height="26" Grid.Column="1"
                  ItemsSource="{Binding Path=nombreRegion}"
                  DisplayMemberPath="nombreRegion"
                  SelectedValuePath="idRegion"/>
        <ComboBox x:Name="comunasCmb"  HorizontalAlignment="Left" Margin="108,263,0,0" VerticalAlignment="Top" Width="138" Height="26" Grid.Column="1"
                  ItemsSource="{Binding Path=nombreComuna}" 
                  DisplayMemberPath="nombreComuna"
                  SelectedValuePath="idComuna"/>
        <Label Content="Regiones:" HorizontalAlignment="Left" Margin="36,230,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="61"/>
        <Label Content="Comuna:" HorizontalAlignment="Left" Margin="36,261,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="57"/>
        <Button x:Name="guardarBtn" Content="Guardar Usuarios" Click="guardarBtn_Click" Width="138" Height="20" Margin="108,294,554,136"/>
    </Grid>
</Page>
