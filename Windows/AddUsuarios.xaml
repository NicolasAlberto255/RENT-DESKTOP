            Header="Nueva Contraseña" />
        <TextBox
            x:Name="nombreTxt"
            Width="138"
            Height="20"
            Margin="153,84,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            PreviewTextInput="ValidacionDeTexto"
            TextWrapping="Wrap">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox
            x:Name="apellidoTxt"
            Width="138"
            Height="20"
            Margin="153,124,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            PreviewTextInput="ValidacionDeTexto"
            TextWrapping="Wrap">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox
            x:Name="cedulaTxt"
            Width="138"
            Height="20"
            Margin="153,164,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            LostFocus="ValidarRut_LostFocus"
            MaxLength="9"
            PreviewTextInput="ValidacionDeNumeros"
            TextWrapping="Wrap">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox
            x:Name="correoTxt"
            Width="138"
            Height="20"
            Margin="153,204,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="telefonoTxt"
            Width="138"
            Height="20"
            Margin="153,244,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            MaxLength="9"
            PreviewTextInput="ValidacionDeNumeros"
            TextWrapping="Wrap">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox
            x:Name="rolTxt"
            Grid.Column="1"
            Width="24"
            Height="20"
            Margin="10,414,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="3"
            TextWrapping="Wrap"
            Visibility="Hidden" />
        <TextBox
            x:Name="idTxt"
            Grid.Column="1"
            Width="20"
            Height="26"
            Margin="108,43,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="0"
            TextWrapping="Wrap"
            Visibility="Hidden" />

        <ComboBox
            x:Name="regionCmb"
            Width="138"
            Height="20"
            Margin="153,284,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DisplayMemberPath="nombreRegion"
            ItemsSource="{Binding nombreRegion}"
            SelectedValuePath="idRegion"
            SelectionChanged="regionCmb_Changed" />
        <ComboBox
            x:Name="comunaCmb"
            Width="138"
            Height="20"
            Margin="153,324,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DisplayMemberPath="nombreComuna"
            ItemsSource="{Binding nombreComuna}"
            SelectedValuePath="idComuna" />

        <Label
            Width="56"
            Height="26"
            Margin="81,81,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Nombre:" />
        <Label
            Width="56"
            Height="26"
            Margin="81,121,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Apellido:" />
        <Label
            Width="56"
            Height="26"
            Margin="81,161,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Cedula:" />
        <Label
            Width="56"
            Height="26"
            Margin="81,201,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Correo:" />
        <Label
            Width="58"
            Height="26"
            Margin="81,241,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Telefono:" />
        <Label
