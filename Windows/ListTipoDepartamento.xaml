<Page
    x:Class="RENT.Windows.ListTipoDepartamento"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RENT.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ListTipoDepartamento"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="White">
        <Button
            x:Name="CargarTabla"
            Width="84"
            Margin="64,296,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="CargarTabla_Click"
            Content="Cargar Tabla" />
        <Button
            x:Name="SubirBtn"
            Width="84"
            Margin="64,344,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="CargarBtn_Click"
            Content="Cargar Imagen" />
        <Image
            x:Name="imagenPanel"
            Width="256"
            Height="209"
            Margin="348,260,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            x:Name="GuardarBtn"
            Margin="64,381,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="GuardarBtn_Click"
            Content="Guardar Imagen" />
        <ListBox
            x:Name="imagenListBox"
            Margin="33,16,40,190"
            HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        x:Name="border"
                        Margin="5"
                        Padding="9"
                        BorderBrush="DarkSlateBlue"
                        BorderThickness="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Text="ID Imagen:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding idImagen}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Text="Nombre Imagen:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding nombreImagen}" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Text="Tipo Extension Imagen" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Text="{Binding tipoExtension}" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Text="ID Tipo Departamento Imagen:" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Text="{Binding idTipoDepto}" />
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                Text="Size Imagen:" />
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="1"
                                Text="{Binding size}" />
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                Text="URL Imagen:" />
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="1"
                                Text="{Binding url}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
