<Page x:Class="RENT.Windows.ListUsuarios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RENT.Windows"
      mc:Ignorable="d" 
      d:Height="530" d:Width="850"
      Title="ListUsuarios">

    <Grid Background="#FFFCFCFC">
        <DataGrid x:Name="dgUsuarios" Margin="286,84,31,137" 
                  xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit"
                  CanUserAddRows="False"
                  ItemsSource="{Binding}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Usuario" Binding="{Binding Path=idUsuario}"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Path=nombreUsuario}"/>
                <DataGridTextColumn Header="Apellido" Binding="{Binding Path=apellidoUsuario}"/>
                <DataGridTextColumn Header="Cedula" Binding="{Binding Path=cedulaUsuario}"/>
                <DataGridTextColumn Header="Correo" Binding="{Binding Path=correoUsuario}"/>
                <DataGridTextColumn Header="Telefono" Binding="{Binding Path=telefonoUsuario}"/>
                <DataGridTextColumn Header="Rol" Binding="{Binding Path=rolUsuario}"/>
                <DataGridTextColumn Header="Region" Binding="{Binding Path=regionUsuario}"/>
                <DataGridTextColumn Header="Comuna" Binding="{Binding Path=comunaUsuario}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="idBtn" Content="Buscar por ID" HorizontalAlignment="Left" Margin="137,216,0,0" VerticalAlignment="Top" Width="119" Click="idBtn_Click"/>
        <Button x:Name="nombreBtn" Content="Buscar por Nombre" HorizontalAlignment="Left" Margin="137,141,0,0" VerticalAlignment="Top" Width="119" Click="nombreBtn_Click"/>
        <Button x:Name="apellidoBtn" Content="Buscar por Apellido" HorizontalAlignment="Left" Margin="137,166,0,0" VerticalAlignment="Top" Width="119" Click="apellidoBtn_Click"/>
        <Button x:Name="cedulabtn" Content="Buscar por Cedula" HorizontalAlignment="Left" Margin="137,190,0,0" VerticalAlignment="Top" Width="119" Click="cedulaBtn_Click"/>

        <Label x:Name="lblMessage" Content="" HorizontalAlignment="Left" Margin="64,43,0,0" Visibility="Hidden" VerticalAlignment="Top" RenderTransformOrigin="0.101,0.595" Width="37"/>

        <TextBox x:Name="nombreFindTxt"  HorizontalAlignment="Left" Margin="31,141,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="20" Width="101"
                 PreviewTextInput="ValidacionDeTexto"/>
        <TextBox x:Name="apellidoFindTxt"  HorizontalAlignment="Left" Margin="31,166,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="20" Width="101"
                 PreviewTextInput="ValidacionDeTexto"/>
        <TextBox x:Name="cedulaFindTxt"  HorizontalAlignment="Left" Margin="31,191,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="20" Width="101"/>
        <TextBox x:Name="idFindTxt"  HorizontalAlignment="Left" Margin="101,216,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="20" Width="31"
                 PreviewTextInput="ValidacionDeNumeros"/>
        <Button x:Name="cargarUsuariobtn" Content="Cargar Usuarios" HorizontalAlignment="Left" Margin="137,241,0,0" VerticalAlignment="Top" Width="119" Click="cargarUsuariobtn_Click"/>

    </Grid>
</Page>
