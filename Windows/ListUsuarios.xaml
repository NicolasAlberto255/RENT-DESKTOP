<Page x:Class="RENT.Windows.ListUsuarios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RENT.Windows"
      mc:Ignorable="d" 
      Title="ListUsuarios">

    <Grid Background="#FFFCFCFC" Height="450" Width="800">
        <Button x:Name="cargarUsuariobtn" Content="Cargar Usuarios" HorizontalAlignment="Left" Margin="287,254,0,0" VerticalAlignment="Top" Click="cargarUsuariobtn_Click"/>
        <DataGrid x:Name="dgUsuarios" Margin="287,25,30,196" 
                  xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit"
                  CanUserAddRows="False"
                  ItemsSource="{Binding}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Path=nombreUsuario}"/>
                <DataGridTextColumn Header="Apellido" Binding="{Binding Path=apellidoUsuario}"/>
                <DataGridTextColumn Header="Cedula" Binding="{Binding Path=cedulaUsuario}"/>
                <DataGridTextColumn Header="Correo" Binding="{Binding Path=correoUsuario}"/>
                <DataGridTextColumn Header="Telefono" Binding="{Binding Path=telefonoUsuario}"/>
                <DataGridTextColumn Header="Rol" Binding="{Binding Path=rolUsuario}"/>
                <DataGridTextColumn Header="Region" Binding="{Binding Path=regionUsuario}"/>
                <DataGridTextColumn Header="Comuna" Binding="{Binding Path=comunaUsuario}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="idBtn" Content="Buscar por ID" HorizontalAlignment="Left" Margin="138,156,0,0" VerticalAlignment="Top" Width="119" Click="idBtn_Click"/>
        <TextBox x:Name="idFindTxt"  HorizontalAlignment="Left" Margin="102,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="20" Width="31"/>
        <Button x:Name="nombreBtn" Content="Buscar por Nombre" HorizontalAlignment="Left" Margin="138,82,0,0" VerticalAlignment="Top" Width="119" Click="nombreBtn_Click"/>
        <TextBox x:Name="nombreFindTxt"  HorizontalAlignment="Left" Margin="32,82,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="20" Width="101"/>
        <Button x:Name="apellidoBtn" Content="Buscar por Apellido" HorizontalAlignment="Left" Margin="138,107,0,0" VerticalAlignment="Top" Width="119" Click="apellidoBtn_Click"/>
        <TextBox x:Name="apellidoFindTxt"  HorizontalAlignment="Left" Margin="32,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="20" Width="101"/>
        <Button x:Name="cedulabtn" Content="Buscar por Cedula" HorizontalAlignment="Left" Margin="138,131,0,0" VerticalAlignment="Top" Width="119" Click="cedulaBtn_Click"/>
        <TextBox x:Name="cedulaFindTxt"  HorizontalAlignment="Left" Margin="32,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="20" Width="101"/>
        <Label x:Name="lblMessage" Content="" HorizontalAlignment="Left" Margin="64,43,0,0" Visibility="Hidden" VerticalAlignment="Top" RenderTransformOrigin="0.101,0.595" Width="37"/>
    </Grid>
</Page>
