<Page x:Class="RENT.Windows.AddDepartamento"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RENT.Windows"
      mc:Ignorable="d" 
      d:Height="530" d:Width="850"
      Title="AddDepartamento">

    <Grid Background="White">
        <Label Content="Nombre de Departamento" HorizontalAlignment="Left" Margin="67,59,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="N° Baños" HorizontalAlignment="Left" Margin="67,99,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="N° Departamento" HorizontalAlignment="Left" Margin="67,139,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="N° Edificio" HorizontalAlignment="Left" Margin="67,179,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="N° Habitaciones" HorizontalAlignment="Left" Margin="67,219,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Valor de Noche" HorizontalAlignment="Left" Margin="67,259,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Region" HorizontalAlignment="Left" Margin="67,299,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Comuna" HorizontalAlignment="Left" Margin="67,339,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="¿Tiene Balcon?" HorizontalAlignment="Left" Margin="67,379,0,0" VerticalAlignment="Top" Height="26"/>

        <TextBox x:Name="nombreDeptoTxt" HorizontalAlignment="Left" Margin="222,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"
                 PreviewTextInput="ValidacionDeTexto"/>
        <TextBox x:Name="nBanosTxt" HorizontalAlignment="Left" Margin="222,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"
                 PreviewTextInput="ValidacionDeNumeros"
                 MaxLength="2"/>
        <TextBox x:Name="nDeptoTxt" HorizontalAlignment="Left" Margin="222,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20" PreviewTextInput="ValidacionDeNumeros"/>
        <TextBox x:Name="nEdificioTxt" HorizontalAlignment="Left" Margin="222,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20" 
                 PreviewTextInput="ValidacionDeNumeros"
                 MaxLength="5"/>
        <TextBox x:Name="nHabitacionesTxt" HorizontalAlignment="Left" Margin="222,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20" 
                 PreviewTextInput="ValidacionDeNumeros"/>
        <TextBox x:Name="vNocheTxt" HorizontalAlignment="Left" Margin="222,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"
                 PreviewTextInput="ValidacionDeNumeros"/>
        <ComboBox x:Name="regionCmb" HorizontalAlignment="Left" Margin="222,301,0,0" VerticalAlignment="Top" Width="120" Height="20"
                  ItemsSource="{Binding Path=nombreRegion}"
                  DisplayMemberPath="nombreRegion"
                  SelectedValuePath="idRegion"
                  SelectionChanged="regionCmb_Changed"/>
        <ComboBox x:Name="comunaCmb" HorizontalAlignment="Left" Margin="222,342,0,0" VerticalAlignment="Top" Width="120" Height="20"
                  ItemsSource="{Binding Path=nombreComuna}" 
                  DisplayMemberPath="nombreComuna"
                  SelectedValuePath="idComuna"/>
        <Button x:Name="guardarBtn" Content="Guardar" HorizontalAlignment="Left" Margin="226,414,0,0" VerticalAlignment="Top" Width="112" Click="guardarBtn_Click"/>
        <TextBox x:Name="idDeptoTxt"  HorizontalAlignment="Left" Visibility="Hidden"  Margin="89,37,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="balconCbx" Content="" HorizontalAlignment="Left" Margin="225,384,0,0" VerticalAlignment="Top" 
                  Checked="balconCbx_Checked"
                  Unchecked="balconCbx_Unckechecked"/>

        <Label x:Name="lblMessage"  Content="" HorizontalAlignment="Left" Margin="196,445,0,0" VerticalAlignment="Top" Width="172"/>

        <TextBlock x:Name="nomErrTB" Text="" HorizontalAlignment="Left" Margin="225,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="9" Width="114" Foreground="#FFF51313" TextAlignment="Center"/>
        <TextBlock x:Name="nBanosErrTB" Text="" HorizontalAlignment="Left" Margin="225,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="9" Width="114" Foreground="#FFF51313" TextAlignment="Center"/>
        <TextBlock x:Name="nDeptoErrTB" Text="" HorizontalAlignment="Left" Margin="225,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="9" Width="114" Foreground="#FFF51313" TextAlignment="Center"/>
        <TextBlock x:Name="nEdificioErrTB" Text="" HorizontalAlignment="Left" Margin="225,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="9" Width="114" Foreground="#FFF51313" TextAlignment="Center"/>
        <TextBlock x:Name="nHabitErrTB" Text="" HorizontalAlignment="Left" Margin="225,239,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="9" Width="114" Foreground="#FFF51313" TextAlignment="Center"/>
        <TextBlock x:Name="vNocheErrTB" Text="" HorizontalAlignment="Left" Margin="225,282,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="9" Width="114" Foreground="#FFF51313" TextAlignment="Center"/>
        <TextBlock x:Name="regionErrTB" Text="" HorizontalAlignment="Left" Margin="225,321,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="9" Width="114" Foreground="#FFF51313" TextAlignment="Center"/>
        <TextBlock x:Name="comunaErrTB" Text="" HorizontalAlignment="Left" Margin="225,362,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="9" Width="114" Foreground="#FFF51313" TextAlignment="Center"/>
        <Image Margin="401,112,83,144" Source="C:\Users\Nicolas\OneDrive\Escritorio\Portafolio\RENT-DESKTOP\RENT\RENT-DESKTOP\img\Plano-de-departamento-en-3D-Jermey-Gamelin.jpg" Stretch="Fill"/>

    </Grid>

</Page>
