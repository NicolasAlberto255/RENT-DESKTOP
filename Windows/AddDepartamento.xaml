<Page x:Class="RENT.Windows.AddDepartamento"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RENT.Windows"
      mc:Ignorable="d" 
      Title="AddDepartamento">

    <Grid Background="#FFFCFCFC" Height="450" Width="800">
        <Label Content="Nombre de Departamento" HorizontalAlignment="Left" Margin="45,73,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="N° Baños" HorizontalAlignment="Left" Margin="45,103,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="N° Departamento" HorizontalAlignment="Left" Margin="45,133,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="N° Edificio" HorizontalAlignment="Left" Margin="45,163,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="N° Habitaciones" HorizontalAlignment="Left" Margin="45,193,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Valor de Noche" HorizontalAlignment="Left" Margin="45,223,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Region" HorizontalAlignment="Left" Margin="45,253,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Comuna" HorizontalAlignment="Left" Margin="45,283,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="¿Tiene Balcon?" HorizontalAlignment="Left" Margin="45,314,0,0" VerticalAlignment="Top" Height="26"/>
        <TextBox x:Name="nombreDeptoTxt" HorizontalAlignment="Left" Margin="200,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26"/>
        <TextBox x:Name="nBanosTxt" HorizontalAlignment="Left" Margin="200,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26"/>
        <TextBox x:Name="nDeptoTxt" HorizontalAlignment="Left" Margin="200,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26"/>
        <TextBox x:Name="nEdificioTxt" HorizontalAlignment="Left" Margin="200,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26"/>
        <TextBox x:Name="nHabitacionesTxt" HorizontalAlignment="Left" Margin="200,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26"/>
        <TextBox x:Name="vNocheTxt" HorizontalAlignment="Left" Margin="200,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26"/>
        <ComboBox x:Name="regionCmb" HorizontalAlignment="Left" Margin="200,253,0,0" VerticalAlignment="Top" Width="120" Height="26"
                  ItemsSource="{Binding Path=nombreRegion}"
                  DisplayMemberPath="nombreRegion"
                  SelectedValuePath="idRegion"/>
        <ComboBox x:Name="comunaCmb" HorizontalAlignment="Left" Margin="200,283,0,0" VerticalAlignment="Top" Width="120" Height="26"
                  ItemsSource="{Binding Path=nombreComuna}" 
                  DisplayMemberPath="nombreComuna"
                  SelectedValuePath="idComuna"/>
        <Button x:Name="guardarBtn" Content="Guardar" HorizontalAlignment="Left" Margin="45,371,0,0" VerticalAlignment="Top" Width="111" Click="guardarBtn_Click"/>
        <TextBox x:Name="idDeptoTxt"  HorizontalAlignment="Left" Visibility="Hidden"  Margin="89,37,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="balconCbx" Content="" HorizontalAlignment="Left" Margin="200,319,0,0" VerticalAlignment="Top" 
                  Checked="balconCbx_Checked"
                  Unchecked="balconCbx_Unckechecked"/>
        <Label x:Name="lblMessage"  Content="" HorizontalAlignment="Left" Margin="45,340,0,0" VerticalAlignment="Top" Width="171"/>
    </Grid>
    
</Page>
